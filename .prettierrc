{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 150,
  "endOfLine": "auto",
  "importOrder": [
    "^@/assets/(.*)$",
    "^@/mocks/(.*)$",
    "^@/apis/(.*)$",
    "^@/utils/(.*)$",
    "^@/types/(.*)$",
    "^@/constants/(.*)$",
    "^@/routes/(.*)$",
    "^@/components/(.*)$",
    "^@/hooks/(.*)$",
    "^[@/]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
